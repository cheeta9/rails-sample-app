<li class="flex pb-3" id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <div class="pl-3">
    <a href="<%= user_path(micropost.user) %>" class="underline decoration-sky-500">
      <strong class="text-sky-500"><%= micropost.user.name %></strong>
    </a>
    <div>
      <%= micropost.content %>
      <%= image_tag(micropost.image, size: 500) if micropost.image.attached? %>
    </div>
    <div>
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
      <% if current_user?(micropost.user) %>
        <%= link_to "delete", micropost, data: { turbo_method: :delete, confirm: "You sure?" }, class: "underline decoration-sky-500" %>
      <% end %>
    </div>
  </div>
</li>
